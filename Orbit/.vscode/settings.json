{
    // These are configurations used for haxe completion.
    //
    // Each configuration is an array of arguments that will be passed to the Haxe completion server,
    // they should only contain arguments and/or hxml files that are needed for completion,
    // such as -cp, -lib, target output settings and defines.
    "haxe.displayConfigurations": [
        // if a hxml file is safe to use, we can just pass it as argument
        // you can add more than one configuration and switch between them
        ["export/debug/flash/haxe/debug.hxml"],
        ["export/debug/flash/haxe/release.hxml"],
        ["export/debug/html5/haxe/debug.hxml"],
        ["export/debug/html5/haxe/release.hxml"],
        ["export/debug/windows/cpp/haxe/debug.hxml"],
        ["export/debug/windows/cpp/haxe/release.hxml"],
        ["export/debug/windows/neko/haxe/debug.hxml"],
        ["export/debug/windows/neko/haxe/release.hxml"],
        ["export/debug/linux/cpp/haxe/debug.hxml"],
        ["export/debug/linux/cpp/haxe/release.hxml"],
        ["export/debug/linux/neko/haxe/debug.hxml"],
        ["export/debug/linux/neko/haxe/release.hxml"],
        ["export/debug/mac/cpp/haxe/debug.hxml"],
        ["export/debug/mac/cpp/haxe/release.hxml"],
        ["export/debug/mac/neko/haxe/debug.hxml"],
        ["export/debug/mac/neko/haxe/release.hxml"],
        ["export/debug/android/haxe/debug.hxml"],
        ["export/debug/android/haxe/release.hxml"],
        ["export/debug/ios/haxe/debug.hxml"],
        ["export/debug/ios/haxe/release.hxml"]
    ],
    "haxe.diagnosticsPathFilter": "${workspaceRoot}/source",




    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "export": true
    }
}